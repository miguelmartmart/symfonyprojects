{# templates/appointments/list.html.twig #}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Citas</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<header>
    <h1>Gestión de Citas</h1>
</header>
<main class="container">
    <section class="filters">
        <h2>Filtrar Citas</h2>
        <form id="filtersForm">
            <label for="marca">Marca:</label>
            <select id="marca" name="marca">
                <option value="">Todas</option>
                {% for marca in marcas %}
                    <option value="{{ marca }}">{{ marca }}</option>
                {% endfor %}
            </select>

            <label for="modelo">Modelo:</label>
            <select id="modelo" name="modelo" disabled>
                <option value="">Todos</option>
            </select>

            <label for="estado">Estado:</label>
            <select id="estado" name="estado">
                <option value="">Todos</option>
                {% for estado in estados %}
                    <option value="{{ estado }}">{{ estado }}</option>
                {% endfor %}
            </select>

            <label for="cliente">Cliente:</label>
            <select id="cliente" name="cliente">
                <option value="">Todos</option>
                {% for cliente in clientes %}
                    <option value="{{ cliente.id }}">{{ cliente.nombre }}</option>
                {% endfor %}
            </select>
        </form>
    </section>

    <section>
        <h2>Listado de Citas</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Cliente</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th>Vehículo</th>
                </tr>
            </thead>
            <tbody id="appointmentTable">
                {% for cita in appointments %}
                    <tr data-marca="{{ cita.vehiculo.marca }}" data-modelo="{{ cita.vehiculo.modelo }}" data-estado="{{ cita.estado.value }}" data-cliente="{{ cita.cliente.id }}">
                        <td>{{ cita.id }}</td>
                        <td>{{ cita.cliente.nombre }}</td>
                        <td>{{ cita.fechaCita|date('d-m-Y H:i') }}</td>
                        <td>{{ cita.estadoLabel }}</td>
                        <td>{{ cita.vehiculo.marca }} {{ cita.vehiculo.modelo }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
</main>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const marcaSelect = document.getElementById("marca");
    const modeloSelect = document.getElementById("modelo");
    const estadoSelect = document.getElementById("estado");
    const clienteSelect = document.getElementById("cliente");
    const rows = document.querySelectorAll("#appointmentTable tr");

    function filterRows() {
        const marca = marcaSelect.value.toLowerCase();
        const modelo = modeloSelect.value.toLowerCase();
        const estado = estadoSelect.value.toLowerCase();
        const cliente = clienteSelect.value;

        rows.forEach(row => {
            const matchMarca = !marca || row.dataset.marca.toLowerCase() === marca;
            const matchModelo = !modelo || row.dataset.modelo.toLowerCase() === modelo;
            const matchEstado = !estado || row.dataset.estado.toLowerCase() === estado;
            const matchCliente = !cliente || row.dataset.cliente === cliente;
            row.style.display = (matchMarca && matchModelo && matchEstado && matchCliente) ? "" : "none";
        });
    }

    [marcaSelect, modeloSelect, estadoSelect, clienteSelect].forEach(select => {
        select.addEventListener("change", filterRows);
    });

    marcaSelect.addEventListener("change", () => {
        const modelos = new Set();
        rows.forEach(row => {
            if (!marcaSelect.value || row.dataset.marca.toLowerCase() === marcaSelect.value.toLowerCase()) {
                modelos.add(row.dataset.modelo);
            }
        });

        modeloSelect.innerHTML = `<option value="">Todos</option>`;
        modelos.forEach(modelo => {
            modeloSelect.innerHTML += `<option value="${modelo}">${modelo}</option>`;
        });

        modeloSelect.disabled = modelos.size === 0;
    });
});
</script>
</body>
</html>
